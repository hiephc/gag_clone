<h1>Photos</h1>

<table class="table table-hover">
  <thead>
  <tr>
    <th>User</th>
    <th>Title</th>
    <th>Image</th>
    <th colspan="2"></th>
  </tr>
  </thead>

  <tbody>
  <% @photos.each do |photo| %>
      <tr>
        <td><%= photo.user.email %></td>
        <td><%= photo.title %></td>
        <td><%= image_tag photo.image.thumb.url %></td>
        <td><%= link_to 'Show', photo %></td>
        <td><%= link_to 'Delete', manages_photo_path(photo), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<br>
